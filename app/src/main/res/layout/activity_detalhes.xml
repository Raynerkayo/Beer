<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetalhesActivity"
    android:background="@color/colorSecondary"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="341dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="4dp"
        android:background="@color/colorSecondary">


        <!--
        android:layout_alignTop serve para
        alinahr a algum outro componente.
        -->

        <ImageView
            android:id="@+id/icon_placeholder"
            android:layout_width="75dp"
            android:layout_height="76dp"
            android:gravity="center"
            android:src="@drawable/placeholder"
            android:textColor="@color/colorSecondaryDark"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txt_nome"
            android:layout_width="262dp"
            android:layout_height="31dp"
            android:layout_alignTop="@+id/icon_placeholder"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="18dp"
            android:layout_toEndOf="@+id/icon_placeholder"
            android:layout_toRightOf="@+id/icon_placeholder"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="24sp"
            tools:text="AB: 01" />

        <TextView
            android:id="@+id/txt_tagline"
            android:layout_width="256dp"
            android:layout_height="19dp"
            android:layout_alignTop="@+id/icon_placeholder"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="52dp"
            android:layout_marginBottom="18dp"
            android:layout_toEndOf="@+id/icon_placeholder"
            android:layout_toRightOf="@+id/icon_placeholder"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="12sp"
            tools:text="AB: 01" />

        <TextView
            android:id="@+id/txt_description"
            android:layout_width="351dp"
            android:layout_height="115dp"
            android:layout_below="@+id/txt_cerveja"
            android:layout_alignTop="@+id/icon_placeholder"
            android:layout_marginStart="-62dp"
            android:layout_marginLeft="-62dp"
            android:layout_marginTop="186dp"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@+id/icon_placeholder"
            android:layout_toRightOf="@+id/icon_placeholder"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12dp"
            tools:text="Vanilla Bean Infused Belgian Quad." />

    </RelativeLayout>

</RelativeLayout>